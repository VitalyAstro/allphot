# -*-bash-*-  vim: ft=bash

# has <test> <list> PUBLIC
# return true if list contains test
has() {
    local test=${1} item
    shift
    for item in "$@" ; do
	[[ ${item} == ${test} ]] && return 0
    done
    return 1
}

# is_function <function> PUBLIC
# test whether function exists
is_function() {
    [[ $(type -t "${1}" ) == "function" ]]
}

# is_number <arg> PUBLIC
# returns true if and only if <arg> is a positive whole number
is_number() {
    [[ -n ${1} ]] && [[ -z ${1//[[:digit:]]} ]]
}
